//Q11 Write a program that takes user input. Convert and show the input in title case.                
                let users= "Enter any name to convert into Captalized"
                let kaz= users.split(" ");
                for(i=0;i<kaz.length;i++){
                        kaz[i]=kaz[i][0].toUpperCase() + kaz[i].slice(1).toLowerCase();  
                }
                let newKaz = kaz.join(" ")
                console.log(newKaz)


